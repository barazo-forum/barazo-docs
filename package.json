{
  "name": "@barazo-forum/docs",
  "version": "0.1.0",
  "private": true,
  "description": "Documentation site for Barazo (docs.barazo.forum)",
  "repository": {
    "type": "git",
    "url": "https://github.com/barazo-forum/barazo-docs.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/colors": "3.0.0",
    "fumadocs-core": "16.6.5",
    "fumadocs-mdx": "14.2.8",
    "fumadocs-ui": "16.6.5",
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.2",
    "@commitlint/config-conventional": "20.4.2",
    "@tailwindcss/postcss": "4.2.1",
    "@types/mdx": "2.0.13",
    "@types/node": "25.3.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "eslint": "9.39.3",
    "eslint-config-next": "16.1.6",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "tailwindcss": "4.2.1",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css,yml,yaml}": [
      "prettier --write"
    ]
  }
}
